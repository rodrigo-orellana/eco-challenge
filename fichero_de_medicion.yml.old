execution:
  # usuarios simulados  
- concurrency: 10
  # Tiempo en que se crearán los 10 usuarios
  ramp-up: 5s
  # Tiempo en el cual se mantendrá la carga
  hold-for: 20s
  # nombre del escenario
  scenario: cc_hit0_4

scenarios:
  cc_hit0_4:
    # tiempo maximo para conectar y recibir respuesta
    timeout: 5s 
    # para que no recupere todos los recursos incrustados de páginas HTML
    retrieve-resources: false
    # no guardar cache
    store-cache: false
    # no guardar cookies
    store-cookie: false
    # URL base de las pruebas
    default-address: http://localhost:8989
    # Request del test
    requests:
    # Ruta de la app
    - /desafios
    - url: '/desafios'
      method: POST
      body:
        nombre: test0007
    - url: '/desafios/test0007'
      method: GET
    - url: '/desafios/test0007'
      method: DELETE
      headers:
        Content-Type: application/x-www-form-urlencoded
      body:
        nombre: test0007
